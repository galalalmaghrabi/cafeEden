<!DOCTYPE html>
<html lang="ar">
<%- include('parts/head') %>

    <body>
        <%- include('parts/nav') %>
            <%- include('parts/sidebar') %>

            <section class="container-fluid admin d-flex" style="min-height: 100vh; background-color:black;">
                <section class="container adminContainer"> 
                    <div class="title">
                        <h1><em>Admin page</em></h1>
                    </div>
                    <div class="title">
                        <h2><em>Add Food </em></h2>
                    </div>
                    <form action="/admin" method="post" class="d-flex col-12" enctype="multipart/form-data">
                        <div class="form-group col-12">
                            <label>Name :</label>
                            <input type="text" class="form-control col-12"  aria-describedby="emailHelp" name="name"  required> 
                        </div>
                        <div class="form-group col-12">
                            <label>English Name :</label>
                            <input type="text" class="form-control col-12"  aria-describedby="emailHelp" name="englishName"  required> 
                        </div>
                        <div class="form-group col-12">
                            <label>price :</label>
                            <input type="text" class="form-control col-12"  aria-describedby="emailHelp" name="price"  required> 
                        </div>
                        <div class="form-group col-12">
                            <label>description English :</label>
                            <input type="text" class="form-control col-12"  aria-describedby="emailHelp" name="desc"  required> 
                        </div>
                        <div class="form-group col-12">
                            <label>description Arabic :</label>
                            <input type="text" class="form-control col-12"  aria-describedby="emailHelp" name="descArabic"  required> 
                        </div>
                        <div class="form-group col-12">
                            <label>image :</label>
                            <input type="file" class="form-control col-12"  aria-describedby="emailHelp" name="image"  required> 
                        </div>
                        <div class="form-group col-12 category">
                            <label>category :</label>
                            <select name="category" id="category" class="" required>
                                <option value="Food">Food*</option>
                                <option value="breakfast">Breakfast</option>
                                <option value="dinner">dinner</option>
                                <option value="drinks">drinks</option>
                                <option value="appet">appetiser</option>
                                <option value="main">main</option>
                                <option value="popular">most popular</option>
                            </select>
                        </div>
                        <div class="form-group col-12 category">
                            <label>Reverse :</label>
                            <select name="reverse" id="category" class="" required>
                                <option value="reverse">reverse</option>
                                <option value="false">no reverse</option>
                            </select>
                        </div>
                        <div class="form-group col-12 parentBtn">
                            <button type="submit" class="btn btn-outline-info" formaction="/admin" formmethod="post" formenctype="multipart/form-data">add</button>
                        </div>
                    </form>
                </section>
            </section>
                <%- include('parts/footer') %>
                    <%- include('parts/scriptTags') %>
    </body>

</html>